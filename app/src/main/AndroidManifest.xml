<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zmt.boxin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 需要运行时注册的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Application.App"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.MessageActivity" />
        <activity android:name=".Activity.ScoreActivity" />
        <activity android:name=".Activity.SettingActivity" />
        <activity android:name=".Activity.SuggestActivity" />
        <activity android:name=".Activity.BoxinActivity" />
        <activity android:name=".Activity.WebView" />
        <activity android:name=".Activity.TrainPlan" />
        <activity android:name=".Activity.RunActivity" />

        <service android:name="com.amap.api.location.APSService" />

        <meta-data
            android:name="design_width"
            android:value="768" />
        <meta-data
            android:name="design_height"
            android:value="1280" />
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="811097093edf9e55310e611a44e15fc6" />

        <activity android:name=".Activity.ReleaseActivity" />
        <activity android:name=".Activity.NewsDetail"></activity>
    </application>

</manifest>