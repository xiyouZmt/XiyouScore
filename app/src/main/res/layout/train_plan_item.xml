<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/courseName"
            android:background="@color/color_fafafa"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="幸福心理学"
            android:textSize="20sp"
            android:textColor="@color/color_212121"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/courseName"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:id="@+id/property"
            android:text="必修课"
            android:textSize="16sp"
            android:textColor="@color/color_212121"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseName"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/examMethod"
            android:text="考核方式: 校考"
            android:textSize="16sp"
            android:textColor="@color/color_212121" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/examMethod"
            android:layout_toRightOf="@+id/examMethod"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/credit"
            android:text="学分: 2.0"
            android:textSize="16sp"
            android:textColor="@color/color_212121" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/examMethod"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weekHours"
                android:text="周学时: 2.0"
                android:textSize="16sp"
                android:textColor="@color/color_212121" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/resit"
                android:layout_alignParentRight="true"
                android:id="@+id/courseTime"
                android:text="起始结束周: 01-16"
                android:textSize="14sp"
                android:textColor="@color/color_212121"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>